TARGET = $(CORE_DIR)/../libs/liblove.$(TARGET_PLATFORM).a

DEFINES  += -D_REENTRANT -DLOVE_NOMPG123
CFLAGS   += -Wall -I$(CORE_DIR)/../SDL2-2.0.5/include/SDL2 -I$(CORE_DIR)/../physfs-2.0.3 -I$(CORE_DIR)/../freetype-2.5.0.1/include
CXXFLAGS += $(CFLAGS) -std=c++11
LDFLAGS  += -L$(CORE_DIR)/../SDL2-2.0.5/lib

OBJS = $(SOURCES_C:.c=$(OBJEXT)) $(SOURCES_CXX:.cpp=$(OBJEXT)) $(SOURCES_S:.s=$(OBJEXT))

%$(OBJEXT): %.cpp
	$(CXX) -c -o $@ $< $(CXXFLAGS) $(DEFINES) $(INCLUDES)

%$(OBJEXT): %.c
	$(CC) -c -o $@ $< $(CFLAGS) $(DEFINES) $(INCLUDES)

%$(OBJEXT): %.s
	$(AS) -c -o $@ $<

all: $(TARGET)

$(TARGET): $(OBJS)
	$(AR) rcs $@ $(OBJS)

clean-objs:
	rm -f $(OBJS)

clean: clean-objs
	rm -f $(TARGET)

.PHONY: clean-objs clean FORCE
